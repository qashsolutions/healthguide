# =====================================================
# HEALTHGUIDE ENVIRONMENT VARIABLES
# =====================================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!
# =====================================================

# ===========================================
# SUPABASE (Required)
# ===========================================
# Get these from: https://supabase.com/dashboard/project/YOUR_PROJECT/settings/api

EXPO_PUBLIC_SUPABASE_URL=https://YOUR_PROJECT_ID.supabase.co
EXPO_PUBLIC_SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.YOUR_ANON_KEY_HERE

# ===========================================
# STRIPE (Required for payments)
# ===========================================
# Get these from: https://dashboard.stripe.com/apikeys

EXPO_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_YOUR_PUBLISHABLE_KEY
# Note: Secret key should only be in Supabase Edge Functions, not in the app

# ===========================================
# GOOGLE MAPS (Optional - for address autocomplete)
# ===========================================
# Get from: https://console.cloud.google.com/apis/credentials
# Enable: Places API, Geocoding API

EXPO_PUBLIC_GOOGLE_MAPS_API_KEY=AIzaSyYOUR_API_KEY_HERE

# ===========================================
# SENTRY (Optional - for error tracking)
# ===========================================
# Get from: https://sentry.io

EXPO_PUBLIC_SENTRY_DSN=https://YOUR_KEY@sentry.io/YOUR_PROJECT_ID

# ===========================================
# APP ENVIRONMENT
# ===========================================
# Options: development, staging, production

EXPO_PUBLIC_APP_ENV=development
